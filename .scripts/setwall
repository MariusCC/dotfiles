#!/bin/bash
pic=$1
echo $pic

wpg -s $pic --backend wal
feh --bg-fill $pic

# reload dunst
# Script to set colors generated by 'wal'
# https://github.com/dylanaraps/wal
# Source generated colors.
. "${HOME}/.cache/wal/colors.sh"

reload_dunst() {
    pkill dunst
    dunst \
	-frame_width 0 \
        -lb "${color0}" \
        -nb "${color0}" \
        -cb "${color1}" \
        -lf "${color7}" \
        -cf "${color0}" \
        -nf "${color7}" &
}

reload_dunst

